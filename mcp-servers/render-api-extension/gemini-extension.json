{
  "name": "render-api",
  "version": "1.0.0",
  "description": "Render.com API integration for configuring services, environment variables, health checks, and deployments",
  "mcpServers": {
    "render-api": {
      "command": "node",
      "args": ["${extensionPath}${/}dist${/}server.js"],
      "cwd": "${extensionPath}",
      "env": {
        "RENDER_API_KEY": "${RENDER_API_KEY}"
      },
      "timeout": 30000,
      "trust": true
    }
  },
  "contextFileName": "GEMINI.md"
}
