{
  "name": "LLM Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"]
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": { "label": "API", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "pip install -e . && pip install pytest mypy pylint",
  "postStartCommand": "uvicorn api.app:app --host 0.0.0.0 --port 8000"
}