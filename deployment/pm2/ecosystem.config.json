{
  "apps": [{
    "name": "llm-agents",
    "script": "run_continuous.py",
    "interpreter": "python3",
    "args": "--agent all --interval 60",
    "instances": 1,
    "autorestart": true,
    "watch": false,
    "max_memory_restart": "500M",
    "env": {
      "PYTHONUNBUFFERED": "1"
    },
    "error_file": "./logs/err.log",
    "out_file": "./logs/out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "restart_delay": 10000
  }]
}
