FROM node:20-alpine AS builder

# Install build dependencies
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++ \
    sqlite

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Install semgrep
RUN apk add --no-cache py3-pip && \
    pip3 install --break-system-packages semgrep

# Production stage
FROM node:20-alpine

# Install runtime dependencies
RUN apk add --no-cache \
    git \
    python3 \
    sqlite

# Install semgrep in production image
RUN apk add --no-cache py3-pip && \
    pip3 install --break-system-packages semgrep

# Create non-root user
RUN addgroup -g 1001 -S analyzer && \
    adduser -S analyzer -u 1001 -G analyzer

WORKDIR /app

# Copy from builder
COPY --from=builder --chown=analyzer:analyzer /app/node_modules ./node_modules

# Copy application code
COPY --chown=analyzer:analyzer mcp-code-analyzer.js ./

# Create volume mount points
RUN mkdir -p /workspace /output && \
    chown -R analyzer:analyzer /workspace /output

# Switch to non-root user
USER analyzer

# Set environment variables
ENV NODE_ENV=production \
    WORKSPACE=/workspace \
    OUTPUT=/output

# Default command
ENTRYPOINT ["node", "mcp-code-analyzer.js"]
CMD ["/workspace"]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD node -e "console.log('healthy')" || exit 1

# Labels
LABEL maintainer="MCP Code Analyzer" \
      description="Multi-server MCP analysis chain" \
      version="1.0.0"
