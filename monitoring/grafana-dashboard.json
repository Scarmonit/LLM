{
  "dashboard": {
    "title": "MCP Unified Orchestrator Dashboard",
    "tags": ["mcp", "monitoring", "orchestrator"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "MCP Server Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(mcp_server_status == 1)",
            "legendFormat": "Online Servers",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(mcp_server_requests_total[5m])",
            "legendFormat": "{{server_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 3, "x": 15, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(mcp_server_errors_total[5m])) / sum(rate(mcp_server_requests_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Server Uptime",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "mcp_server_uptime_seconds",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {},
              "renameByName": {
                "server_name": "Server",
                "Value": "Uptime (s)"
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "title": "Requests by Server",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "mcp_server_requests_total",
            "legendFormat": "{{server_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 9, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "mcp_server_cpu_percent",
            "legendFormat": "{{server_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 9, "x": 9, "y": 16},
        "targets": [
          {
            "expr": "mcp_server_memory_bytes / 1024 / 1024",
            "legendFormat": "{{server_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "mbytes", "label": "Memory (MB)"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Error Logs (Last Hour)",
        "type": "logs",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "{job=\"mcp-servers\",level=\"error\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 9,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mcp_server_response_time_bucket[5m]))",
            "legendFormat": "{{server_name}} p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(mcp_server_response_time_bucket[5m]))",
            "legendFormat": "{{server_name}} p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Response Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "sum(mcp_server_active_connections)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 11,
        "title": "Throughput (MB/s)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 32},
        "targets": [
          {
            "expr": "rate(mcp_server_bytes_transmitted[5m]) / 1024 / 1024",
            "legendFormat": "{{server_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "MBs", "label": "Throughput"},
          {"format": "short"}
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "server",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(mcp_server_status, server_name)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  },
  "overwrite": true
}
