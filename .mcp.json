{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:/Users/scarm"
      ],
      "env": {}
    },
    "puppeteer": {
      "type": "stdio",
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "env": {}
    },
    "shell": {
      "type": "stdio",
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "@modelcontextprotocol/server-shell"
      ],
      "env": {}
    },
    "claude-bridge": {
      "type": "stdio",
      "command": "node",
      "args": [
        "C:/Users/scarm/claude-bridge-mcp/index.js"
      ],
      "env": {}
    },
    "mcp-doctor": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "mcp-doctor-server",
        "node",
        "mcp-doctor-server.js"
      ],
      "env": {}
    },
    "kali-mcp": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "kali-mcp-server",
        "node",
        "kali-mcp-server.js"
      ],
      "env": {}
    },
    "onepassword": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "onepassword-mcp-server",
        "node",
        "onepassword-mcp-server.js"
      ],
      "env": {
        "OP_SERVICE_ACCOUNT_TOKEN": "placeholder-token"
      }
    },
    "desktop-automation": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "desktop-automation-mcp-server",
        "node",
        "desktop-automation-mcp-server.js"
      ],
      "env": {}
    },
    "a2a-unified": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "a2a-unified-mcp-server",
        "python",
        "unified_server_monitored.py"
      ],
      "env": {}
    },
    "claude-code": {
      "type": "stdio",
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@steipete/claude-code-mcp"
      ],
      "env": {
        "CLAUDE_CLI_NAME": "claude",
        "MCP_CLAUDE_DEBUG": "true"
      }
    },
    "omnipotent": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "C:/Users/scarm/omnipotent-mcp",
        "run",
        "server_optimized.py"
      ],
      "env": {}
    },
    "unified-intelligent": {
      "type": "stdio",
      "command": "node",
      "args": [
        "C:/Users/scarm/unified-intelligent-mcp/dist/index.js"
      ],
      "env": {
        "DEBUG": "0"
      }
    },
    "terraform-mcp": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "terraform-mcp-server",
        "node",
        "src/mcp/terraform-mcp-server.js"
      ],
      "env": {}
    },
    "aws-mcp": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "aws-mcp-server",
        "node",
        "aws-mcp-server.js"
      ],
      "env": {}
    }
