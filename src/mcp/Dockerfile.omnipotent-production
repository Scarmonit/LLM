# ============================================================================
# Omnipotent MCP Server - Production Dockerfile
# Multi-stage build with security hardening
# ============================================================================

# Stage 1: Build stage
FROM python:3.11-slim as builder

# Security: Run as non-root
RUN groupadd -r mcp && useradd -r -g mcp mcp

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY omnipotent-mcp/requirements.txt* ./
RUN if [ -f requirements.txt ]; then pip install --user --no-cache-dir -r requirements.txt; fi

# Install core dependencies
RUN pip install --user --no-cache-dir \
    fastmcp \
    psutil \
    httpx \
    beautifulsoup4 \
    lxml

# Stage 2: Production stage
FROM python:3.11-slim

LABEL maintainer="MCP Production Team"
LABEL description="Omnipotent MCP Server - Production Ready"
LABEL version="3.0"

# Security hardening
RUN groupadd -r mcp && useradd -r -g mcp mcp

# Install runtime dependencies only
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    procps \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

WORKDIR /app

# Copy Python packages from builder
COPY --from=builder /root/.local /home/mcp/.local

# Copy application code
COPY omnipotent-mcp/server_production.py ./server.py

# Security: Set proper permissions
RUN chown -R mcp:mcp /app && \
    chmod 755 /app && \
    chmod 644 /app/server.py

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH=/home/mcp/.local/bin:$PATH \
    CACHE_TTL_SECONDS=60 \
    HTTP_POOL_SIZE=20 \
    RATE_LIMIT_CALLS=100 \
    RATE_LIMIT_PERIOD=60

# Security: Switch to non-root user
USER mcp

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD python -c "import sys, psutil; sys.exit(0 if psutil.cpu_percent(interval=0.1) < 95 else 1)"

# Expose no ports (stdio communication)
EXPOSE 0

# Run the server
CMD ["python", "-u", "server.py"]
